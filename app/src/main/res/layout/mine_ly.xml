<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/personal_ly"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/cs_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看编辑个人资料" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#e2e2e2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_uc_1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_uc_1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_uc_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_gift" />

                <TextView
                    android:id="@+id/tv_uc_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:textColor="#242424"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#e2e2e2" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#e2e2e2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_uc_2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_uc_2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_uc_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_safe" />

                <TextView
                    android:id="@+id/tv_uc_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的账单"
                    android:textColor="#242424"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#e2e2e2" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#e2e2e2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_uc_3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_uc_3"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_uc_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_message" />

                <TextView
                    android:id="@+id/tv_uc_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的话题"
                    android:textColor="#242424"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#e2e2e2" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_uc_4"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_uc_4"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_uc_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/ic_raiders1" />

                <TextView
                    android:id="@+id/tv_uc_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="喜好"
                    android:textColor="#242424"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#e2e2e2" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#e2e2e2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_uc_5"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_uc_5"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_uc_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_vip"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:id="@+id/tv_uc_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#242424"
                    android:text="设置"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#e2e2e2" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#e2e2e2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_uc_6"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/ll_uc_6"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_uc_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:id="@+id/tv_uc_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#242424"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#e2e2e2" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
