<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/ed_tel"
        style="@style/syt_ed"
        android:layout_width="match_parent"
        android:hint="请输入手机号" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_input_normal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/ed_coed"
            style="@style/syt_ed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number" />


        <TextView
            android:id="@+id/tv_getcoed"
            android:layout_width="71dp"
            android:layout_height="18.6dp"
            android:layout_gravity="center"
            android:layout_marginRight="13.3dp"
            android:background="@null"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#01d45f"
            android:textSize="11.4dp" />


    </LinearLayout>

    <EditText
        android:id="@+id/tv_pwd1"
        style="@style/syt_ed"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:hint="请输入密码" />

    <EditText
        android:id="@+id/tv_pwd2"
        style="@style/syt_ed"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:hint="请输确认密码" />


    <Button
        android:id="@+id/btn_sub"
        style="@style/syt_btn_green"
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:text="提交" />
</LinearLayout>
