<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/mer_pic"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:tag="ivMer"
        android:scaleType="fitXY"
        android:src="@drawable/test3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mer_title"
            style="@style/tv_3"
            android:layout_width="0dp"
            android:tag="tvName"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="悦旁测试商家" />

        <Button
            android:id="@+id/btn_buy"
            style="@style/syt_btn_green"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:tag="btnBuy"
            android:layout_marginRight="8dp"
            android:text="买单"
            android:textSize="@dimen/f3" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2" />

    <TextView
        android:id="@+id/mer_msg"
        style="@style/tv_3"
        android:tag="tvMsg"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="悦旁测试商家提供美食服务" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2" />

    <TextView
        android:id="@+id/mer_loction"
        style="@style/tv_3"
        android:layout_width="match_parent"
        android:tag="tvloction"
        android:layout_height="38dp"
        android:text="地址：南京XXX" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2" />

    <TextView
        android:id="@+id/mer_tel"
        style="@style/tv_3"
        android:tag="tvTel"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="电话：1234567" />

</LinearLayout>
