<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mer_pic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/test3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mer_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="悦旁测试商家" />

        <Button
            android:id="@+id/btn_buy"
            style="@style/syt_btn_blue"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="买单" />
    </LinearLayout>

    <TextView
        android:id="@+id/mer_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="悦旁测试商家提供美食服务" />

    <TextView
        android:id="@+id/mer_loction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="地址：南京XXX" />

    <TextView
        android:id="@+id/mer_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="电话：1234567" />

</LinearLayout>
