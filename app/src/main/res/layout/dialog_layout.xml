<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_grey_fillet"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/dialog_tiltle"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="修改姓名"
        android:textColor="#343434"
        android:textSize="18.4dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d1d5e0" />

    <RelativeLayout
        android:id="@+id/ll_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="12dp"
        android:paddingRight="13.33dp"
        android:text="请输入你要修改的信息"
        android:textColor="#343434"
        android:textSize="15.4dp" />

    <EditText
        android:id="@+id/ed_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@drawable/bg_shuru"
        android:gravity="center_vertical"
        android:paddingLeft="13.33dp"
        android:paddingRight="13.33dp"
        android:textColor="#343434"
        android:textSize="15.4dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_btnl"
            style="@style/syt_btn_green"
            android:layout_width="0dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="取消"
            android:visibility="gone" />


        <Button
            android:id="@+id/dialog_btnr"
            style="@style/syt_btn_grey"
            android:layout_width="0dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="确认"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>