<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">




    <TextView
        style="@style/c6f8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="推荐商家" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/merchant1_ly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_merchant1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/test1" />

            <TextView
                android:id="@+id/tv_merchant1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="测试商家1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/merchant2_ly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_merchant2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/test2" />

            <TextView
                android:id="@+id/tv_merchant2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="测试商家2" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/c6f8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="今日特卖" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/test2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试商品名称" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试商家说明xxxxxxx" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="电话 1234156" />
    </LinearLayout>

    <!--<ListView-->
    <!--android:id="@+id/goodlist"-->
    <!--style="@style/sty_list"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginLeft="10dp" />-->

</LinearLayout>
